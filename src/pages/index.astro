    <video
      autoplay
      muted
      loop
      playsinline
      preload="metadata"
      poster="/videos/poster.jpg"
      class="hero-video-blur"
      aria-hidden="true"
    >
      <source src="/videos/vivasu-hero-optimized.webm" type="video/webm">
      <source src="/videos/vivasu-hero-optimized.mp4" type="video/mp4">
    </video>

