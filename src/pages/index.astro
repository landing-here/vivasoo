      const separator = element.dataset.separator || '';
      const duration = 2000; // 2초
      const fps = 60;
      const totalFrames = (duration / 1000) * fps;
      let currentFrame = 0;

      const interval = setInterval(() => {
        currentFrame++;
        const progress = currentFrame / totalFrames;
        // easeOutCubic: 빠르게 시작 → 천천히 끝
        const easeOutCubic = 1 - Math.pow(1 - progress, 3);
        const current = target * easeOutCubic;

        let displayValue;
        if (decimal > 0) {
          // 소수점 있음 (예: 4.9)
          displayValue = current.toFixed(decimal);
        } else {
          // 정수 (예: 260, 1200)
          displayValue = Math.floor(current).toString();
          if (separator) {
            // 천 단위 구분자 추가 (예: 1,200)
            displayValue = displayValue.replace(/\B(?=(\d{3})+(?!\d))/g, separator);
          }
        }

        element.textContent = prefix + displayValue + suffix;

        // 애니메이션 완료
        if (currentFrame >= totalFrames) {
          clearInterval(interval);

          // 최종 값 정확히 설정
          let finalValue;
          if (decimal > 0) {
            finalValue = target.toFixed(decimal);
          } else {
            finalValue = target.toString();
            if (separator) {
              finalValue = finalValue.replace(/\B(?=(\d{3})+(?!\d))/g, separator);
            }
          }
          element.textContent = prefix + finalValue + suffix;

          // Facebook Pixel: 카운트업 완료 이벤트 (선택)
          if (typeof fbq !== 'undefined') {
            fbq('trackCustom', 'TrustBadgeViewed', {
              content_name: 'Social Proof Section',
              badge_type: element.dataset.count
            });
          }
        }
      }, 1000 / fps);
    }

    // Intersection Observer 설정 (화면에 보일 때만 애니메이션 실행)
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // 50% 이상 보일 때 애니메이션 시작
          startCountUp(entry.target);
          observer.unobserve(entry.target); // 1회만 실행
        }
      });
    }, { threshold: 0.5 });

    // 모든 .countup 요소 관찰
    document.querySelectorAll('.countup').forEach(el => {
      observer.observe(el);
    });
  });
