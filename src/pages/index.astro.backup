  <!-- ì¹´ìš´íŠ¸ì—… ì• ë‹ˆë©”ì´ì…˜ ìŠ¤í¬ë¦½íŠ¸ (SEO ì•ˆì „) -->
  <script is:inline>
  /**
   * Progressive Enhancement ë°©ì‹ ì¹´ìš´íŠ¸ì—… ì• ë‹ˆë©”ì´ì…˜
   * - HTMLì— ì‹¤ì œ ê°’ ìœ ì§€ (SEO í¬ë¡¤ë§ ë³´ì¥)
   * - JavaScript ì‹¤í–‰ ì‹œ ì• ë‹ˆë©”ì´ì…˜ ì¶”ê°€
   * - Intersection Observerë¡œ í™”ë©´ ì§„ì… ì‹œë§Œ ì‹¤í–‰
   */
  document.addEventListener('DOMContentLoaded', function() {
    // ì¹´ìš´íŠ¸ì—… ì• ë‹ˆë©”ì´ì…˜ í•¨ìˆ˜
    function startCountUp(element) {
      const target = parseFloat(element.dataset.count);
      const decimal = parseInt(element.dataset.decimal || 0);
      const suffix = element.dataset.suffix || '';
      const prefix = element.dataset.prefix || '';
      const separator = element.dataset.separator || '';
      const duration = 2000; // 2ì´ˆ
      const fps = 60;
      const totalFrames = (duration / 1000) * fps;
      let currentFrame = 0;

      const interval = setInterval(() => {
        currentFrame++;
        const progress = currentFrame / totalFrames;
        // easeOutCubic: ë¹ ë¥´ê²Œ ì‹œì‘ â†’ ì²œì²œíˆ ë
        const easeOutCubic = 1 - Math.pow(1 - progress, 3);
        const current = target * easeOutCubic;

        let displayValue;
        if (decimal > 0) {
          // ì†Œìˆ˜ì  ìˆìŒ (ì˜ˆ: 4.9)
          displayValue = current.toFixed(decimal);
        } else {
          // ì •ìˆ˜ (ì˜ˆ: 260, 1200)
          displayValue = Math.floor(current).toString();
          if (separator) {
            // ì²œ ë‹¨ìœ„ êµ¬ë¶„ì ì¶”ê°€ (ì˜ˆ: 1,200)
            displayValue = displayValue.replace(/\B(?=(\d{3})+(?!\d))/g, separator);
          }
        }

        element.textContent = prefix + displayValue + suffix;

        // ì• ë‹ˆë©”ì´ì…˜ ì™„ë£Œ
        if (currentFrame >= totalFrames) {
          clearInterval(interval);

          // ìµœì¢… ê°’ ì •í™•íˆ ì„¤ì •
          let finalValue;
          if (decimal > 0) {
            finalValue = target.toFixed(decimal);
          } else {
            finalValue = target.toString();
            if (separator) {
              finalValue = finalValue.replace(/\B(?=(\d{3})+(?!\d))/g, separator);
            }
          }
          element.textContent = prefix + finalValue + suffix;

          // Facebook Pixel: ì¹´ìš´íŠ¸ì—… ì™„ë£Œ ì´ë²¤íŠ¸ (ì„ íƒ)
          if (typeof fbq !== 'undefined') {
            fbq('trackCustom', 'TrustBadgeViewed', {
              content_name: 'Social Proof Section',
              badge_type: element.dataset.count
            });
          }
        }
      }, 1000 / fps);
    }

    // Intersection Observer ì„¤ì • (í™”ë©´ì— ë³´ì¼ ë•Œë§Œ ì• ë‹ˆë©”ì´ì…˜ ì‹¤í–‰)
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // 50% ì´ìƒ ë³´ì¼ ë•Œ ì• ë‹ˆë©”ì´ì…˜ ì‹œì‘
          startCountUp(entry.target);
          observer.unobserve(entry.target); // 1íšŒë§Œ ì‹¤í–‰
        }
      });
    }, { threshold: 0.5 });

    // ëª¨ë“  .countup ìš”ì†Œ ê´€ì°°
    document.querySelectorAll('.countup').forEach(el => {
      observer.observe(el);
    });
  });
  </script>
