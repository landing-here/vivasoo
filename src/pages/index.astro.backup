  <script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const video = document.getElementById('hero-video');

    if (!video) return;

    // iOS Safari ìë™ì¬ìƒ ë³´ì¥ (Intersection Observer)
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          video.play().catch(() => {
            // ìë™ì¬ìƒ ì‹¤íŒ¨ ì‹œ ë¬´ì‹œ (ìŒì†Œê±° ìƒíƒœë¼ ëŒ€ë¶€ë¶„ ì„±ê³µ)
          });
        }
      });
    }, { threshold: 0.5 });

    observer.observe(video);

    // Facebook Pixel: ë™ì˜ìƒ ì¬ìƒ ì‹œì‘
    let hasTrackedPlay = false;
    video.addEventListener('play', function() {
      if (!hasTrackedPlay && typeof fbq !== 'undefined') {
        fbq('track', 'ViewContent', {
          content_name: 'Hero Video',
          content_category: 'Video',
          content_type: 'video',
          value: 0,
          currency: 'KRW'
        });
        hasTrackedPlay = true;
      }
    });

    // Facebook Pixel: ë™ì˜ìƒ ì§„í–‰ë¥  ì¶”ì  (25%, 50%, 75%, 100%)
    const milestones = { 25: false, 50: false, 75: false, 100: false };

    video.addEventListener('timeupdate', function() {
      const progress = (video.currentTime / video.duration) * 100;

      Object.keys(milestones).forEach(milestone => {
        if (progress >= milestone && !milestones[milestone]) {
          milestones[milestone] = true;

          if (typeof fbq !== 'undefined') {
            fbq('trackCustom', 'VideoProgress', {
              video_name: 'Hero Video',
              progress: milestone + '%',
              video_duration: Math.round(video.duration) + 's'
            });
          }
        }
      });
    });
  });
